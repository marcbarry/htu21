[Unit]
Description=HTU21 JSON HTTP endpoint
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=pi
Group=pi
WorkingDirectory=/opt/htu21
ExecStart=/opt/htu21/htu21
Environment=DOTNET_BUNDLE_EXTRACT_BASE_DIR=/opt/htu21/.net
AmbientCapabilities=CAP_NET_BIND_SERVICE
CapabilityBoundingSet=CAP_NET_BIND_SERVICE
NoNewPrivileges=true
Restart=always
RestartSec=2

[Install]
WantedBy=multi-user.target
